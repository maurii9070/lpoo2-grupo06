<Window x:Class="Vistas.Alumnos.AltaAlumno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AltaAlumno" Height="388" Width="410" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Border Background="#FFF0F5FF" CornerRadius="8" Padding="15" Margin="10" Height="329">
        <Grid Height="306">
            <StackPanel>
                <TextBlock Text="Alta de Alumno" FontWeight="Bold" FontSize="18" 
                           Foreground="#FF1E3A8A" Margin="0 0 0 15" HorizontalAlignment="Center"/>

                <Border CornerRadius="6" Background="White" Padding="15" Margin="0 0 0 10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 8">
                            <TextBlock Text="DNI:" Width="100" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtDNI" Width="200" Padding="4" BorderThickness="1" BorderBrush="#FFCCCCCC"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0 8">
                            <TextBlock Text="Apellido:" Width="100" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtApellido" Width="200" Padding="4" BorderThickness="1" BorderBrush="#FFCCCCCC"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0 8">
                            <TextBlock Text="Nombre:" Width="100" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtNombre" Width="200" Padding="4" BorderThickness="1" BorderBrush="#FFCCCCCC"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0 8">
                            <TextBlock Text="Email:" Width="100" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtEmail" Width="200" Padding="4" BorderThickness="1" BorderBrush="#FFCCCCCC"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0 15 0 0">

                    <Button Template="{StaticResource BotonAlumnoGuardar}" Content="Guardar" 
                            Width="90" Click="Guardar_Click" HorizontalAlignment="Center" Margin="10 0" IsDefault="True"/>

                    <Button Template="{StaticResource BotonAlumnoCancelar}" Content="Cancelar" Width="90" IsCancel="True" />
                </StackPanel>
                
            </StackPanel>
        </Grid>
    </Border>
</Window>
