<Window x:Class="Vistas.Docentes.AltaDocenteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alta Docente" Height="290" Width="357"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="DNI:"      Grid.Row="0" Grid.Column="0" Margin="0 5" VerticalAlignment="Center"/>
        <TextBox  Style="{StaticResource TextBoxDocente}" Name="txtDni" Grid.Row="0" Grid.Column="1" Margin="5 5"/>

        <TextBlock Text="Apellido:" Grid.Row="1" Grid.Column="0" Margin="0 5" VerticalAlignment="Center"/>
        <TextBox  Style="{StaticResource TextBoxDocente}" Name="txtApellido" Grid.Row="1" Grid.Column="1" Margin="5 5"/>

        <TextBlock Text="Nombre:"  Grid.Row="2" Grid.Column="0" Margin="0 5" VerticalAlignment="Center"/>
        <TextBox  Style="{StaticResource TextBoxDocente}" Name="txtNombre" Grid.Row="2" Grid.Column="1" Margin="5 5"/>

        <TextBlock Text="Email:"   Grid.Row="3" Grid.Column="0" Margin="0 5" VerticalAlignment="Center"/>
        <TextBox  Style="{StaticResource TextBoxDocente}" Name="txtEmail" Grid.Row="3" Grid.Column="1" Margin="5 5"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0 15 0 0">
            <Button Style="{StaticResource BotonDocenteGuardar}" Name="btnGuardar" Content="Guardar" Width="90" IsDefault="True"
                    Click="btnGuardar_Click"/>
            <Button Style="{StaticResource BotonDocenteCancelar}" Name="btnCancelar" Content="Cancelar" Width="90" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>