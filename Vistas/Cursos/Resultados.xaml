<Window x:Class="Vistas.Cursos.Resultados"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resultados" Height="450" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F9F9F9">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Selección de alumno -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- ComboBox alumnos -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="Alumno:" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="cmbAlumnos" Width="220" Height="30" SelectionChanged="cmbAlumnos_SelectionChanged"
                          Background="White" BorderBrush="#CCCCCC" Padding="5"/>
            </StackPanel>

            <!-- Botón Regresar -->
            <Button Content="Regresar" Grid.Column="1" Click="btnRegresar_Click"
                    Width="100" Height="30" Margin="10,0,0,0"
                    Background="#FF2196F3" 
                    Foreground="White" BorderBrush="#B0B0B0"
                    FontWeight="SemiBold" Cursor="Hand"/>
        </Grid>

        <!-- Cursos finalizados -->
        <DataGrid x:Name="cursosFinalizados" Grid.Row="1"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  RowBackground="White" AlternatingRowBackground="#F0F0F0"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  BorderBrush="#D0D0D0" BorderThickness="1"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Curso" Binding="{Binding NombreCurso}" Width="*"/>
                <DataGridTextColumn Header="Docente" Binding="{Binding NombreDocente}" Width="*"/>
                <DataGridTextColumn Header="Fecha Fin" Binding="{Binding FechaFin, StringFormat=dd/MM/yyyy}" Width="150"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Totales -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Text="Finalizados:" FontWeight="SemiBold" FontSize="13" Margin="0,0,10,0"/>
            <TextBlock x:Name="txtFinalizados" FontWeight="Bold" FontSize="13" Foreground="#2E7D32" Margin="0,0,20,0"/>
            <TextBlock Text="En curso:" FontWeight="SemiBold" FontSize="13" Margin="0,0,10,0"/>
            <TextBlock x:Name="txtEnCurso" FontWeight="Bold" FontSize="13" Foreground="#0277BD"/>
        </StackPanel>
    </Grid>
</Window>