<Window x:Class="Vistas.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu Principal" Height="600" Width="1010" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Body -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Aside -->
            <ColumnDefinition Width="*"/>
            <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- ===== Header ===== -->
        <Border Grid.ColumnSpan="2" Background="#FF003366" CornerRadius="0 0 8 8">
            <DockPanel Margin="20 10" LastChildFill="False">
                <!-- Título del Sistema -->
                <TextBlock Text="Sistema de Gestión Académica"
                           Foreground="White" FontSize="20" FontWeight="Bold"
                           VerticalAlignment="Center" DockPanel.Dock="Left"/>

                <!-- Información del Usuario (A la derecha) -->
                <StackPanel DockPanel.Dock="Right" VerticalAlignment="Center">
                    <!-- Nombre Grande -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Usuario: " Foreground="#FFCCCCCC" FontSize="12" VerticalAlignment="Bottom" Margin="0,0,5,2"/>
                        <TextBlock x:Name="txtUsuarioHeader" Text="Invitado" 
                                   Foreground="White" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>

                    <!-- Rol Pequeño -->
                    <TextBlock x:Name="txtRolHeader" Text="Rol: -" 
                               Foreground="#FF99CCFF" FontSize="12" FontStyle="Italic" 
                               HorizontalAlignment="Right" Margin="0,2,0,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- ===== Aside (Menú Lateral) ===== -->
        <StackPanel Grid.Row="1" Background="#FFF0F0F0" Margin="0 5 5 5">
            <TextBlock Text="Menú Principal" FontWeight="Bold" Margin="10 10 10 20"
                       FontSize="16" Foreground="#FF003366"/>

            <!-- Sección Sistema -->
            <Expander Header="Sistema" IsExpanded="True" Margin="5 0 5 5">
                <StackPanel Margin="15 5">
                    <Button Content="Usuarios" Height="30" Margin="0 2" Click="MenuUsuarios_Click"/>
                    <Button Content="Salir" Height="30" Margin="0 2" Name="btnSalir" Click="btnSalir_Click" />
                </StackPanel>
            </Expander>

            <!-- Sección Académico -->
            <Expander Header="Académico" IsExpanded="True" Margin="5 0 5 5">
                <StackPanel Margin="15 5">
                    <Button Content="Cursos"   Height="30" Margin="0 2" Click="MenuCursos_Click" />
                    <Button Content="Estados de cursos"   Height="30" Margin="0 2" Click="MenuEstadoCursos_Click" />
                    <Button Content="Docentes" Height="30" Margin="0 2" Click="MenuDocentes_Click"/>
                    <Button Content="Alumnos"  Height="30" Margin="0 2" Click="MenuAlumnos_Click"/>
                </StackPanel>
            </Expander>

            <!-- Sección Inscripciones -->
            <Expander Header="Inscripciones" IsExpanded="True" Margin="5 0 5 5">
                <StackPanel Margin="15 5">
                    <Button Content="Gestionar Inscripciones" Height="30" Margin="0 2" Click="MenuInscripciones_Click"/>
                    <Button Content="Acreditar Cursos" Height="30" Margin="0 2" Click="Button_Click" />
                </StackPanel>
            </Expander>

            <Expander Header="Reportes" IsExpanded="False" Margin="5 0 5 5">
                <Button Content="Ver Reportes" Height="30" Margin="15 5"/>
            </Expander>
        </StackPanel>

        <!-- ===== Content Area (dinámico) ===== -->
        <Border Grid.Row="1" Grid.Column="1" Background="White"
                BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="4" Margin="0 5 5 5">

            <!-- 
               Contenido por defecto: Mensaje de Bienvenida.
            -->
            <ContentControl x:Name="AreaContenido" Margin="10">
                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center">
                        <!-- Saludo Grande -->
                        <TextBlock x:Name="txtBienvenida" 
                                   Text="¡Bienvenido!" 
                                   FontSize="36" FontWeight="Bold" Foreground="#FF1E3A8A"
                                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

                        <!-- Mensaje detallado -->
                        <TextBlock x:Name="txtBienvenidaDetalle" 
                                   Text="Cargando información..." 
                                   FontSize="18" Foreground="#555"
                                   HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"
                                   MaxWidth="600" LineHeight="28"/>
                    </StackPanel>
                </Grid>
            </ContentControl>

        </Border>
    </Grid>
</Window>