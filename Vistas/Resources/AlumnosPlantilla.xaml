<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Plantilla BOTÓN GUARDAR -->
    <ControlTemplate x:Key="BotonAlumnoGuardar" TargetType="Button">
        <Border x:Name="border"
                Background="#4CAF50"
                BorderBrush="#2E7D32"
                BorderThickness="2"
                CornerRadius="5"
                Padding="10,5">
            <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              TextElement.FontWeight="Bold"
                              TextElement.Foreground="White"/>
        </Border>

        <ControlTemplate.Triggers>
            <!-- Mouse encima -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="border" Property="Background" Value="#66BB6A"/>
                <Setter TargetName="border" Property="BorderBrush" Value="#388E3C"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- Plantilla BOTÓN CANCELAR -->
    <ControlTemplate x:Key="BotonAlumnoCancelar" TargetType="Button">
        <Border x:Name="border"
                Background="#F44336"
                BorderBrush="#D32F2F"
                BorderThickness="2"
                CornerRadius="5"
                Padding="10,5">
            <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              TextElement.FontWeight="Bold"
                              TextElement.Foreground="White"/>
        </Border>

        <ControlTemplate.Triggers>
            <!-- Mouse encima -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="border" Property="Background" Value="#EF5350"/>
                <Setter TargetName="border" Property="BorderBrush" Value="#C62828"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>



</ResourceDictionary>