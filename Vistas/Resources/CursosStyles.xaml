<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
    1. IMPORTAMOS TUS DICCIONARIOS EXISTENTES
    Importamos solo los botones de Usuarios.
    -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Vistas;component/Resources/UsuariosPlantilla.xaml"/>
        <!-- Ya no necesitamos DocentesStyles.xaml porque copiaremos sus propiedades -->
    </ResourceDictionary.MergedDictionaries>


    <!-- 
    2. ESTILOS NUEVOS PARA FORMULARIOS (Curso)
    -->

    <!-- Estilo para las etiquetas (TextBlock) a la izquierda -->
    <Style x:Key="FormLabelStyle" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#444"/>
        <Setter Property="Margin" Value="0,5,10,5"/>
    </Style>

    <!-- 
    Estilo para los controles de entrada (TextBox, ComboBox, DatePicker)
    CORRECCIÓN: Definimos las propiedades aquí y quitamos el BasedOn.
    El TargetType debe ser 'Control' para que sirva de base a
    TextBox, ComboBox, y DatePicker.
    -->
    <Style x:Key="FormInputStyle" TargetType="Control">
        <!-- Propiedades copiadas de tu TextBoxDocente -->
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Background" Value="#F5F5F5"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="5"/>
        <!-- Propiedades del estilo original -->
        <Setter Property="Margin" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Estilos específicos que heredan del nuevo estilo de input -->
    <Style TargetType="TextBox" BasedOn="{StaticResource FormInputStyle}" />
    <Style TargetType="ComboBox" BasedOn="{StaticResource FormInputStyle}" />
    <Style TargetType="DatePicker" BasedOn="{StaticResource FormInputStyle}" />

    <!-- Estilo para la TextBox de Descripción (multilínea) -->
    <Style x:Key="FormTextAreaStyle" TargetType="TextBox" BasedOn="{StaticResource FormInputStyle}">
        <Setter Property="AcceptsReturn" Value="True"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="MaxHeight" Value="70"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

</ResourceDictionary>