﻿<Window x:Class="Vistas.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login- Sistema de gestion academica" Height="450" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF0F0F0" >
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#FF003366" Grid.Row="0">
            <TextBlock Text="Sistema de Gestión Académica"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="20 10" HorizontalAlignment="Center" />
        </Border>

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="0,0,8,8"
                BorderBrush="{x:Null}"
                BorderThickness="0"
                Padding="20"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch">

            <StackPanel VerticalAlignment="Center">

                <!-- Bienvenida -->
                <TextBlock Text="Inicia Sesión"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#003366"
                           Margin="0 0 0 20"
                           HorizontalAlignment="Center"/>

                <!-- Usuario -->
                <Label Content="Usuario" FontWeight="SemiBold" FontSize="16" 
                           Margin="0 0 0 3" Foreground="#444" Name="lblUsuario"/>
                <TextBox x:Name="txtUsuario"
                         Height="30"
                         BorderBrush="#CCC"
                         BorderThickness="1"
                         Padding="5"
                         Margin="0 0 0 10"/>

                <!-- Contraseña -->
                <Label Content="Contraseña"  Name="lblContrasenia" Margin="0 0 0 3" Foreground="#444" FontWeight="SemiBold" FontSize="16" />
                <PasswordBox x:Name="txtPassword"
                             Height="30"
                             BorderBrush="#CCC"
                             BorderThickness="1"
                             Padding="5"
                             Margin="0 0 0 20"/>
                <!-- Botón -->
                <Button x:Name="btnIngresar"
                        Content="Ingresar"
                        Height="45"
                        FontSize="16"
                        Background="#FF003366"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand" 
                        Click="btnIngresar_Click" 
                        IsDefault="True"
                       />
                <Button Content="Salir"
                        Name="btnSalir"
                        Height="45"
                        FontSize="16"
                        FontWeight="Bold"
                        Margin="0,10,0,0"
                        Background="#FFE6E4E4"
                        Foreground="#003366"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        Click="btnCancelar_Click" 
                        IsCancel="True"
                        />

            </StackPanel>
        </Border>
    </Grid>
</Window>