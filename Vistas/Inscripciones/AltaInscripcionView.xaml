<Window x:Class="Vistas.Inscripciones.AltaInscripcionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Inscripción"
        Height="300" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <Grid Margin="25">

        <!-- Row structure -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- titulo -->
            <RowDefinition Height="Auto"/>
            <!-- formulario -->
            <RowDefinition Height="*"/>
            <!-- botones -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Registrar inscripción"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Margin="0,10,0,10"
                   TextAlignment="Center"
        
                  />

        <!-- FORM -->
        <Grid Grid.Row="1" Margin="0,0,0,10">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- fila curso -->
                <RowDefinition Height="Auto"/>
                <!-- fila dni -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- CURSO -->
            <TextBlock Text="Seleccione un curso:"
                       FontWeight="SemiBold"
                       FontSize="14" VerticalAlignment="Center"
                       Margin="0,10,0,12"/>
            <ComboBox x:Name="cboCursos"
                      Grid.Row="0" Grid.Column="1"
                      Height="34"
                      Margin="5"
                      Padding="8"
                      Background="White"
                      BorderBrush="#CFCFCF"
                      BorderThickness="1"/>
            <!-- DNI -->
            <TextBlock Text="DNI del alumno:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Grid.Row="1" VerticalAlignment="Center"
                       Margin="0,5" />
            <TextBox x:Name="txtAlumno"
                     Grid.Row="1" Grid.Column="1"
                     Height="34"
                     Margin="5"
                     Padding="8"
                     Background="White"
                     BorderBrush="#CFCFCF"
                     BorderThickness="1" />
        </Grid>

        <!-- BOTONES -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <Button Content="Cancelar"
                    Width="100"
                    Height="33"
                    Margin="5"
                    Background="#E0E0E0"
                    BorderBrush="#BDBDBD"
                    Foreground="#333"
                    FontWeight="Bold"
                    Cursor="Hand"
                    IsCancel="True" Name="btnCancelar" Click="btnCancelar_Click" />

            <Button Content="Guardar"
                    Width="120"
                    Height="33"
                    Margin="5"
                    Name="btnRegistrarInscripcion"
                    Background="Green"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="#1565C0"
                    Cursor="Hand"
                    Click="btnRegistrarInscripcion_Click"/>

        </StackPanel>

    </Grid>
</Window>
