<UserControl x:Class="Vistas.Inscripciones.AcreditacionUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="450" Width="700">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Acreditación de Cursos" 
                   FontSize="24" FontWeight="Bold" Foreground="#FF1E3A8A"
                   HorizontalAlignment="Center" Margin="10"/>

        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="10" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Ingrese DNI o ID del Alumno:" VerticalAlignment="Center" FontWeight="Bold"/>

                <TextBox x:Name="txtDNI" Width="150" Margin="10,0" VerticalAlignment="Center"/>
                <Button x:Name="btnBuscar" Content="Buscar Alumno" Click="btnBuscar_Click" 
                        Width="120" Height="30" Background="#FF2196F3" Foreground="White"/>
            </StackPanel>
        </Border>

        <GroupBox Grid.Row="2" Header="Cursos del Alumno" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" x:Name="lblNombreAlumno" 
                           Text="" FontWeight="Bold" Foreground="Green" Margin="5"/>

                <DataGrid Grid.Row="1" x:Name="dgInscripciones" 
                          AutoGenerateColumns="False" IsReadOnly="True"
                          SelectionChanged="dgInscripciones_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID Insc" Binding="{Binding Ins_ID}" Width="50"/>
                        <DataGridTextColumn Header="Curso" Binding="{Binding Cur_Nombre}" Width="*"/>
                        <DataGridTextColumn Header="Estado Curso" Binding="{Binding EstadoCurso}" Width="120"/>
                        <DataGridTextColumn Header="Estado Inscripción" Binding="{Binding EstadoInscripcion}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <TextBlock x:Name="lblMensaje" Text="" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
            <Button x:Name="btnAcreditar" Content="Acreditar Curso" Click="btnAcreditar_Click"
                    IsEnabled="False"
                    Width="150" Height="40" Background="Green" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>